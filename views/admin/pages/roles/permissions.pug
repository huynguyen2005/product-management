extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("permissions_view"))
        h1(class="mb-4") Phân quyền
        div(data-records=roles)

        +alert-success(5000)

        div(class="text-right")
            if(role.permissions.includes("permissions_edit"))
                button(
                    class="btn btn-primary mb-3"
                    button-submit
                ) Cập nhật

        table(class="table table-hover table-sm" table-permissions)
            thead
                tr
                    th Tính năng
                    each role in roles
                        th(class="text-center") #{role.title}
            tbody
                tr(data-name="id" class="d-none")
                    td 
                    each role in roles  
                        td 
                            input(type="text" value=role.id)        
                //- Danh mục sản phẩm        
                tr
                    td(colspan="4") Danh mục sản phẩm

                tr(data-name="products-category_view")
                    td Xem
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products-category_create")
                    td Thêm mới
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products-category_edit")
                    td Chỉnh sửa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products-category_delete")
                    td Xóa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")
                
                //- Danh sách sản phẩm
                tr
                    td(colspan="4") Danh sách sản phẩm

                tr(data-name="products_view")
                    td Xem
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products_create")
                    td Thêm mới
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products_edit")
                    td Chỉnh sửa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="products_delete")
                    td Xóa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                //- Nhóm quyền
                tr
                    td(colspan="4") Nhóm quyền

                tr(data-name="roles_view")
                    td Xem
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="roles_create")
                    td Thêm mới
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="roles_edit")
                    td Chỉnh sửa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="roles_delete")
                    td Xóa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                //- Phân quyền
                tr
                    td(colspan="4") Phân quyền

                tr(data-name="permissions_view")
                    td Xem
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="permissions_edit")
                    td Chỉnh sửa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                //- Danh sách tài khoản
                tr
                    td(colspan="4") Danh sách tài khoản

                tr(data-name="accounts_view")
                    td Xem
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="accounts_create")
                    td Thêm mới
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="accounts_edit")
                    td Chỉnh sửa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

                tr(data-name="accounts_delete")
                    td Xóa
                    each role in roles  
                        td(class="text-center")
                            input(type="checkbox")

        form(
            action=`${preFixAdmin}/roles/permissions?_method=PATCH`
            method="POST"
            form-permissions
        ) 
            input(type="text" name="permissions" class="d-none")   
        script(src="/admin/js/role.js") 