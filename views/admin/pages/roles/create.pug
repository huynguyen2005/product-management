extends ../../layouts/default.pug

block main
    if(role.permissions.includes("products-category_create"))
        h1(class="mb-4") Cập nhật tài khoản

        form(
            action=`${preFixAdmin}/users/update`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    placeholder="Le Van A"
                    value=""
                    required
                )

            div(class="form-group mt-3")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="levana@gmail.com"
                    value=""
                    required
                )

            div(class="form-group mt-3")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="••••••"
                    value=""
                )

            div(class="form-group mt-3")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    placeholder="0123456789"
                    value=""
                )

            div(class="form-group mt-3")
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control"
                    id="avatar"
                    name="avatar"
                )

            div(class="form-group mt-3")
                label(for="role") Phân quyền
                select(
                    class="form-control"
                    id="role"
                    name="role"
                )
                    option(value="") -- Chọn quyền --
                    option(value="admin") Quản trị viên
                    option(value="editor") Quản lý nội dung

            div(class="form-group mt-3")
                label Trạng thái
                div
                    div(class="form-check form-check-inline")
                        input(
                            class="form-check-input"
                            type="radio"
                            name="status"
                            id="active"
                            value="active"
                            checked
                        )
                        label(class="form-check-label" for="active") Hoạt động
                    div(class="form-check form-check-inline")
                        input(
                            class="form-check-input"
                            type="radio"
                            name="status"
                            id="inactive"
                            value="inactive"
                        )
                        label(class="form-check-label" for="inactive") Dừng hoạt động

            div(class="form-group mt-4")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
