extends ../../layouts/default
include ../../mixins/formatDateTime

block main
    if user
        h1(class="mb-4") Thông tin cá nhân

        // --- Avatar
        if user.avatar
            div(class="mb-4")
                img(
                    src=user.avatar
                    alt="Avatar"
                    style="width:120px; height:120px; border-radius:50%; object-fit:cover; border:2px solid #ccc;"
                )
        else
            div(class="mb-4 text-muted") Chưa có ảnh đại diện

        // --- Họ tên
        if user.fullName
            div(class="mb-3") 
                span(class="font-weight-bold") Họ và tên: 
                | #{user.fullName}

        // --- Email
        if user.email
            div(class="mb-3")
                span(class="font-weight-bold") Email: 
                | #{user.email}
        
        // --- SDT
        if user.phone
            div(class="mb-3")
                span(class="font-weight-bold") Phone: 
                | #{user.phone}

        // --- Vai trò (role)
        if role
            div(class="mb-3")
                span(class="font-weight-bold") Vai trò: 
                | #{role.title}

        // --- Ngày tạo
        if user.createdAt
            div(class="mb-3")
                span(class="font-weight-bold") Ngày tạo tài khoản: 
                    +formatDateTime(createdAt)

        // --- Trạng thái
        if user.status
            div(class="mb-3")
                span(class="font-weight-bold") Trạng thái: 
                if user.status === "active"
                    span(class="badge badge-success ml-2") Hoạt động
                else
                    span(class="badge badge-danger ml-2") Ngừng hoạt động

        // --- Nút chỉnh sửa
        a(
            href=`${preFixAdmin}/my-account/edit`
            class="btn btn-warning btn-sm mt-3"
        ) 
            i(class="bi bi-pencil-square mr-1")
            | Chỉnh sửa thông tin
    else
        p(class="text-danger") Không tìm thấy thông tin người dùng.
