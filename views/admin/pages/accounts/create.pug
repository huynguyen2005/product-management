extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Cập nhật tài khoản
    
    +alert-error(5000)

    form(
        action=`${preFixAdmin}/accounts/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )

        div(class="form-group mt-3")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
            )

        div(class="form-group mt-3")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        div(class="form-group mt-3")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
            )

        // Avatar (upload image)
        div(
            class="form-group mt-3"
            upload-image
        )
            label(for="avatar") Avatar
            div(class="d-flex align-items-center gap-2")
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
            img(
                src=""
                class="image-preview mt-2"
                upload-image-preview
            )

        div(class="form-group mt-3")
            label(for="role_id") Phân quyền
            select(
                class="form-control"
                id="role_id"
                name="role_id"
            )
                option(value="") -- Chọn quyền --
                each role in roles 
                    option(value=role.id) #{role.title}

        div(class="form-group mt-3")
            label Trạng thái
            div
                div(class="form-check form-check-inline")
                    input(
                        class="form-check-input"
                        type="radio"
                        name="status"
                        id="active"
                        value="active"
                        checked
                    )
                    label(class="form-check-label" for="active") Hoạt động
                div(class="form-check form-check-inline")
                    input(
                        class="form-check-input"
                        type="radio"
                        name="status"
                        id="inactive"
                        value="inactive"
                    )
                    label(class="form-check-label" for="inactive") Dừng hoạt động

        div(class="form-group mt-4")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
