extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/list-btn-users.pug

block main
    .container.my-3
        +list-btn-users()
        .row
            .col-12
                +box-head("Danh sách bạn bè")
        .row(data-friends=user.id)
            each data in users
                .col-6(data-user-in-friends=data.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(data.avatar ? data.avatar : "/client/images/logo.svg")
                                alt=data.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{data.fullName}
                            div(class="inner-buttons")
                                a(
                                    class="btn btn-sm btn-secondary mr-1"
                                    href=`/chat/${data.inforUser.room_chat_id}`
                                ) Nhắn tin
                        div(
                            class="inner-status"
                            status=data.statusOnline
                        ) <i class="fa-solid fa-circle"></i>

block script 
    script(src="/client/js/user.js")
        